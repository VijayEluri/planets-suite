   <profiles>
 		<profile>
 			<id>rdc-hudson-snapshot</id>
 			<activation>
 				<property>
 					<name>rdc.build.type</name>
 					<value>hudson-snapshot</value>
 				</property>
 			</activation>
	  		<distributionManagement>
				<site>
					<id>rdc.storage.site.bil</id>
					<name>BIL Site on RDC Storage</name>
					<url>file:/vol/transfer/mvn-sites/bil</url>
				</site>
			</distributionManagement>
		</profile>
	</profiles>
</project>
