<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/" debug="true" >

    <appender name="STDOUT" class="org.apache.log4j.ConsoleAppender">
        <param name="Target" value="System.out"/>
        <param name="Threshold" value="INFO"/>
        <layout class="org.apache.log4j.PatternLayout">
	    <param name="ConversionPattern" value="%d %-5p [%c] - %m%n"/>
	</layout>
    </appender>
	
    <appender name="ROLLING" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="File" value="${jboss.server.log.dir}/planets-ifr-storage.log"/>
        <layout class="org.apache.log4j.PatternLayout">
	    <param name="ConversionPattern" value="%d %-5p [%c] - %m%n"/>
	</layout>
    </appender>
    
    <appender name="GUIROLLING" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="File" value="${jboss.server.log.dir}/planets-ifr-storage-gui.log"/>
        <layout class="org.apache.log4j.PatternLayout">
	    <param name="ConversionPattern" value="%d %-5p [%c] - %m%n"/>
	</layout>
    </appender>    
	
    <category name="eu.planets_project.ifr.core.storage.impl">
        <priority value="DEBUG"/>
	    <appender-ref ref="ROLLING"/>
    </category>
    
    <!-- GUI LOG CATEGORIES -->
    <category name="eu.planets_project.ifr.core.storage.gui.login.LoginBean">
        <priority value="DEBUG"/>
	    <appender-ref ref="GUIROLLING"/>
    </category>        
    
    <category name="eu.planets_project.ifr.core.storage.gui.BinaryViewerServlet">
        <priority value="DEBUG"/>
	    <appender-ref ref="GUIROLLING"/>
    </category>        
    
    <category name="eu.planets_project.ifr.core.storage.gui.ContentBean">
        <priority value="DEBUG"/>
	    <appender-ref ref="GUIROLLING"/>
    </category>        
    
    <category name="eu.planets_project.ifr.core.storage.gui.comparator.PropertyComparator">
        <priority value="DEBUG"/>
	    <appender-ref ref="GUIROLLING"/>
    </category>        
    
    <category name="eu.planets_project.ifr.core.storage.gui.login.LoginListener">
        <priority value="DEBUG"/>
	    <appender-ref ref="GUIROLLING"/>
    </category>        
    
    <category name="eu.planets_project.ifr.core.storage.gui.module.query.QueryBean">
        <priority value="DEBUG"/>
	    <appender-ref ref="GUIROLLING"/>
    </category>        
    
    <category name="eu.planets_project.ifr.core.storage.gui.util.JcrUtils">
        <priority value="DEBUG"/>
	    <appender-ref ref="GUIROLLING"/>
    </category>        
    
    <category name="eu.planets_project.ifr.core.storage.gui.util.property.PropertyWrapper">
        <priority value="DEBUG"/>
	    <appender-ref ref="GUIROLLING"/>
    </category>        
    
    <category name="eu.planets_project.ifr.core.storage.gui.util.value.MultiValueWrapper">
        <priority value="DEBUG"/>
	    <appender-ref ref="GUIROLLING"/>
    </category>        
    
    <category name="eu.planets_project.ifr.core.storage.gui.util.value.ValueWrapper">
        <priority value="DEBUG"/>
	    <appender-ref ref="GUIROLLING"/>
    </category>        
    
    <category name="eu.planets_project.ifr.core.storage.gui.validator.NamePropertyTypeValidator">
        <priority value="DEBUG"/>
	    <appender-ref ref="GUIROLLING"/>
    </category>        
    
    <category name="eu.planets_project.ifr.core.storage.gui.validator.PathPropertyTypeValidator">
        <priority value="DEBUG"/>
	    <appender-ref ref="GUIROLLING"/>
    </category>            
    
</log4j:configuration>