<!DOCTYPE faces-config PUBLIC "-//Sun Microsystems, Inc.//DTD JavaServer Faces Config 1.0//EN" "http://java.sun.com/dtd/web-facesconfig_1_0.dtd">
<faces-config>

	<application>
		<locale-config>
			<default-locale>en_EN</default-locale>
		</locale-config>
	</application>
	
    <managed-bean>
        <managed-bean-name>PlanetsSharedBean</managed-bean-name>
        <managed-bean-class>eu.planets_project.webui.PlanetsSharedBackingBean</managed-bean-class>
        <managed-bean-scope>application</managed-bean-scope>
    </managed-bean>

    <managed-bean>
        <managed-bean-name>RegistryBean</managed-bean-name>
        <managed-bean-class>eu.planets_project.ifr.core.registry.gui.RegistryBackingBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
	
    <managed-bean>
        <managed-bean-name>EndpointBean</managed-bean-name>
        <managed-bean-class>eu.planets_project.ifr.core.registry.gui.EndpointBackingBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>

    <managed-bean>
        <managed-bean-name>CategoryBean</managed-bean-name>
        <managed-bean-class>eu.planets_project.ifr.core.registry.gui.CategoryBackingBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>

	<navigation-rule>
		<from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>gotoList</from-outcome>
            <to-view-id>/list.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>gotoServices</from-outcome>
            <to-view-id>/services.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>gotoEndpoints</from-outcome>
            <to-view-id>/endpoints.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>editDescription</from-outcome>
            <to-view-id>/description.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
	</navigation-rule>
    
	<converter>
		<converter-id>DateTimeConverter</converter-id>
		<converter-class>javax.faces.convert.DateTimeConverter</converter-class>
	</converter>
	
</faces-config>
