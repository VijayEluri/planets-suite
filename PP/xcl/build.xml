<?xml version="1.0"?>

<!-- ======================================================================= -->
<!-- Planets Services deployer build file for the XCL services               -->
<!-- ======================================================================= -->

<project name="pp-xcl" default="deploy" basedir=".">

	<!-- Specify configuration for this project -->
	<property name="app.name" value="xcl" />
	<property name="app.dir" value="." />
	<!-- Specify the build type: ejb, war or ear. -->
	<property name="pserv.app.build.type" value="war" />
	<property name="pserv.app.deploy.mode" value="requires-config" />

	<property name="src.dir" value="${app.dir}/src/java" />
	<property name="lib.dir" value="${app.dir}/lib" />
	<property name="src.resources" value="${app.dir}/src/resources" />
	<property name="src.web" value="${app.dir}/src/web" />
  
    <!-- Define the API part-->
    <!-- Allow other Planets components to use the Xcdl parser. -->
    <property name="src.api.includes" value="eu/planets_project/ifr/core/services/characterisation/extractor/xcdl/**" />

	<!-- Include the build targets etc -->
	<property name="pserv.root.dir" value="../.." />
	<import file="${pserv.root.dir}/build.common.xml" />

	<!-- Unit testing definitions -->
	<property name="test.src.dir" value="${app.dir}/src/test/java" />
	<property name="test.local" value="" />
	<property name="test.standalone" value="" />
	<property name="test.server" value="" />

</project>