<serviceWrapping version="1.0">

    <serviceDescription>

        <title>
            Ps2pdf migration service.
        </title>

        <description>
            Migration of formats that can be handled by Ps2pdf.
            migration from PS to PDF.  
        </description>

        <tool>
            <name>
                ps2pdf
            </name>

            <description>
                Ps2pdf can be used to migrate from Postscript to PDF files.
            </description>

            <homepage>http://pages.cs.wisc.edu/~ghost/doc/AFPL/6.50/Ps2pdf.htm</homepage>

            <version>
                
            </version>
        </tool>

        <version>
            1.00
        </version>

        <creator>
            <![CDATA["Claus Jensen <cjen@kb.dk"]]>
        </creator>

        <instructions>
            Example: Please install the Ps2pdf tool on the system to
            make this service work.
        </instructions>

        <furtherinfo>http://pages.cs.wisc.edu/~ghost/doc/AFPL/6.50/Ps2pdf.htm</furtherinfo>

        <logo></logo>

    </serviceDescription>

    <paths>
        <path>
            <inputformats>
                <!-- Postscript file extension-->
                <uri value="planets:fmt/ext/ps" />
            </inputformats>

            <outputformat>
                <!-- PDF file extension-->
                <uri value="planets:fmt/ext/pdf" />
            </outputformat>

            <commandline>
                <command>
                    #shellcommand
                </command>

                <commandparameters>
                    <parameter>
                        #shellcommandoption
                    </parameter>

                    <parameter>
                        <![CDATA[#ps2pdfcommand "#inputFile" "#outputFile"]]>
                    </parameter>
                </commandparameters>
            </commandline>

            <toolinput>
                <tempfile label="inputFile" name="inputFile.ps">
                </tempfile>
            </toolinput>

            <tooloutput>
                <tempfile label="outputFile">
                </tempfile>
            </tooloutput>

            <tempfiles>
            </tempfiles>

            <toolparameters>
            </toolparameters>

            <toolpresets>
            </toolpresets>
        </path>
    </paths>
</serviceWrapping>